@page
@model DeskBooker.Web.Pages.BookDeskConfirmationModel
@{
    ViewData["Title"] = "Book Desk Confirmation";
}

<h1 class="display-4">Your desk is booked </h1>

<p class="lead">at our coffee shop in Warsaw.</p>

<p>Hi @Model.FirstName @Model.LastName</p>

<p>
    A desk was booked for you
    on <strong>@Model.Date.ToShortDateString()</strong>.<br />
    Your booking number is <strong>@Model.DeskBookingId</strong>.<br />
    We're looking forward to seeing you!
</p>
<p>
    Your Wired Brain Coffee team
</p>

<div>
    <a class="btn btn-primary" asp-page="/BookDesk">Book another desk</a>
</div>



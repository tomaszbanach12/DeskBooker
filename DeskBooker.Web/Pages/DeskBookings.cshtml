@page
@model DeskBooker.Web.Pages.DeskBookingsModel
@{
    ViewData["Title"] = "Desks bookings";
}

<table class="table table-striped table-bordered dt-responsive nowrap">
    <thead class="thead-light">
        <tr>
            <th>Date</th>
            <th>Desk Number</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var deskBooking in Model.DeskBookings)
        {
        <tr>
            <td>@deskBooking.Date.ToShortDateString()</td>
            <td>@deskBooking.DeskId</td>
            <td>@deskBooking.Email</td>
            <td>@deskBooking.FirstName</td>
            <td>@deskBooking.LastName</td>
        </tr>
        }
    </tbody>
</table>
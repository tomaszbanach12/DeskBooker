@page
@model BookDeskModel
@{
    ViewData["Title"] = "Book a Desk";
}

<h1 class="display-4">Book a desk</h1>
<p class="lead">at our coffee shop in <b>Warsaw</b> for a full day.</p>

<form method="post">
    <div class="form-group">
        <label asp-for="DeskBookingRequest.FirstName" class="control-label"></label>
        <input asp-for="DeskBookingRequest.FirstName" class="form-control" />
        <span class="text-danger" asp-validation-for="DeskBookingRequest.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeskBookingRequest.LastName"></label>
        <input asp-for="DeskBookingRequest.LastName" class="form-control" />
        <span class="text-danger" asp-validation-for="DeskBookingRequest.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeskBookingRequest.Email"></label>
        <input asp-for="DeskBookingRequest.Email" class="form-control" />
        <span class="text-danger" asp-validation-for="DeskBookingRequest.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeskBookingRequest.Date"></label>
        <input asp-for="DeskBookingRequest.Date" class="form-control" />
        <span class="text-danger" asp-validation-for="DeskBookingRequest.Date"></span>
    </div>
    <button type="submit" class="btn btn-primary">Book a desk</button>
</form>
